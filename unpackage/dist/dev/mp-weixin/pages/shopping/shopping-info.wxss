
.content-lunbo{
	width: 100%;
	height: 720rpx;
}
.swiper{
	height: 100%;
	width: 100%;
}
swiper-item image{
	width: 100%;
	height: 720rpx;
}
.content-info{
	 margin: 30rpx;
}
.content-info-title{
	font-weight: 600;
	font-size: 32rpx;
	color: #000000;
	width: 100%;
}
.content-info-main{
	margin-top: 10rpx;
	display: flex;
	justify-content:space-between;
}
.content-info-main-name{
	color: #8C8C8C;
}
.content-info-main-number{
	color: #8C8C8C;
}
.content-info-main-points{
	font-size: 34rpx;
	font-weight: 600;
	color: #4667F0;
	height: 50rpx;
	line-height: 80rpx;
}
.content-info-main-num{
}
.shopping-info{
	margin-top: 20rpx;
	margin-bottom: 80rpx;
	height: auto;
}
.shopping-info-name{
	color: #000000;
	font-size: 34rpx;
	font-weight: 600;
	text-align: center;
}
.shopping-info-img{
	width: 100%;
	height: 500rpx;
	margin-top: 6rpx;
}
.shopping-info-img image{
	width: 100%;
	height: 100%;
}
.shopping-order{
	position:fixed;
	bottom:10rpx;
	left:0rpx;
	width:100%;
	height:100rpx;
	z-index: 99;
	background: #FFFFFF;
}
.shopping-order-content{
    display: flex;
	justify-content:space-between;
	padding:10rpx 30rpx;
}
.shopping-order-total{
	font-size: 34rpx;
	font-weight: 600;
	color: #222222;
	height: 50rpx;
	line-height: 80rpx;
}
.shopping-order-btn{
	background: #4667F0;
	color: #FFFFFF;
	padding:16rpx 20rpx;
	width: 136rpx;
	text-align: center;
	border-radius:20rpx;
}

