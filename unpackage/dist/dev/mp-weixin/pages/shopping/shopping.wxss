
page {
        width: 100%;
        min-height: 100%;
        display: flex;
}
.content{
		 background-color: #f5f5f5;
		 height: auto;
}
.shopping{
	   width: calc(100% - 60rpx);
	   margin: 30rpx 30rpx 0;
}
.swiper{
		height: 300rpx;
		width: 100%;
}
swiper-item image{
		width: 100%;
		height: 300rpx;
		border-radius: 20rpx;
}
.tabs {
        flex: 1;
        flex-direction: column;
        overflow: hidden;
        background-color: #ffffff;
		height: 100vh;
}
.scroll-h {
        width: 750rpx;
      /*  height: 80rpx; */
        flex-direction: row;
        white-space: nowrap;
		background: #FAFAFA;
        /* flex-wrap: nowrap; */
     /*   border-color: #cccccc;
		border-bottom-style: solid;
		border-bottom-width: 1px; */
}
.line-h {
        height: 1rpx;
        background-color: #cccccc;
}
.uni-tab-item {
        display: inline-block;
        flex-wrap: nowrap;
        padding-left: 28rpx;
        padding-right: 28rpx;
}
.uni-tab-item-title {
        color: #000;
        font-size: 30rpx;
        height: 80rpx;
        line-height: 80rpx;
        flex-wrap: nowrap;
}
.uni-tab-item-title-active {
        color: #4667F0;
}
.uni-tab-item-text-active{
		height: 6rpx;
		width: 100%;
		background: #4667F0;
}
.swiper-box {
        flex: 1;
}
.swiper-item {
        flex: 1;
        flex-direction: row;
}
.scroll-v {
     flex: 1;
     flex-direction: column;
     width: 750rpx;
}
.update-tips {
        position: absolute;
        left: 0;
        top: 41px;
        right: 0;
        padding-top: 5px;
        padding-bottom: 5px;
        background-color: #FDDD9B;
        align-items: center;
        justify-content: center;
        text-align: center;
}
.update-tips-text {
        font-size: 14px;
        color: #ffffff;
}
.refresh {
        width: 750rpx;
        height: 64px;
        justify-content: center;
}
.refresh-view {
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: center;
}
.refresh-icon {
		width: 30px;
		height: 30px;
		transition-duration: .5s;
		transition-property: -webkit-transform;
		transition-property: transform;
		transition-property: transform, -webkit-transform;
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg);
		-webkit-transform-origin: 15px 15px;
		        transform-origin: 15px 15px;
}
.refresh-icon-active {
		-webkit-transform: rotate(180deg);
		        transform: rotate(180deg);
}
.loading-icon {
		width: 20px;
		height: 20px;
		margin-right: 5px;
		color: #999999;
}
.loading-text {
        margin-left: 2px;
        font-size: 16px;
        color: #999999;
}
.loading-more {
        align-items: center;
        justify-content: center;
        padding-top: 10px;
        padding-bottom: 10px;
        text-align: center;
}
.loading-more-text {
        font-size: 28rpx;
        color: #999;
}
.shop-list{
		display: flex;
		padding: 30rpx;
		height: auto;
}
.shop-list-img{
		width: 230rpx;
		height: 230rpx;
}
.shop-list-img image{
		width: 100%;
		height: 100%;
}
.shop-list-info{
		padding-left: 30rpx;
}
.shop-list-info-title{
		font-weight: 600;
		font-size: 32rpx;
		color: #000000;
		width: 434rpx;
		text-overflow:ellipsis;
		white-space:nowrap;
		overflow:hidden;
}
.shop-list-info-name{
		margin-top: 8rpx;
		font-weight: 400;
		font-size: 32rpx;
		color: #868686;
}
.shop-list-info-number{
		margin-top: 10rpx;
		background: #4667F0;
		color: #FFFFFF;
		padding:5rpx 20rpx;
		width: 300rpx;
		text-align: center;
		border-radius:20rpx;
}
.shop-list-info-points{
		margin-top: 10rpx;
		display: flex;
		justify-content:space-between;
}
.shop-list-info-points-num{
		font-size: 34rpx;
		font-weight: 600;
		color: #4667F0;
		height: 50rpx;
		line-height: 80rpx;
}
.shop-list-info-points-btn{
		background: #4667F0;
		color: #FFFFFF;
		padding:10rpx 20rpx;
		width: 136rpx;
		text-align: center;
		border-radius:20rpx;
}

